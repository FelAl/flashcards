  <%= form_for @card, html: {class: "form-horizontal"} do |f| %>
    <p>
      <% if flash[:notice] %>
        <%= flash[:notice] %>
      <% end %>
    </p>
    <div class="form-group">
      <%= f.text_field :original_text,   class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.text_field :translated_text, class: "form-control" %>
    </div>
    <div class="clearfix">
      <%= f.submit @card.new_record? ? "Создать" : "Изменить", class: "btn btn-success pull-right" %>
    </div>
  <% end %>