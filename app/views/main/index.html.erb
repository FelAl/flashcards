<!--main-->
<div class="container" id="main">
  <div class="row">
    <div class="col-md-4 col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading"> 
          <h4>Просто текст</h4>
          <section>
            <p>
              Первый в мире удобный менеджер флеш-карточек. Именно так.
            </p>
          </section>
        </div>
      </div>
      <div class="well">
      <%= form_for @card, html: {class: "form-horizontal"} do |f| %>
        <h4>Добавить карточку </h4>
        <div class="form-group">
          <%= f.text_field :original_text,   class: "form-control" %>
          <%= f.text_field :translated_text, class: "form-control" %>
        </div>
        <%= f.submit "Создать", class: "btn btn-success pull-right" %>
        <ul class="list-inline">
          <li>
            <i class="glyphicon glyphicon-align-left"></i>
          </li>
        </ul>
      <% end %>
      </div>
    </div>
    <div class="col-md-4 col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading"> 
          <h4>Пример карточки</h4>
        </div>
        <div class="panel-body">
          <p>
            <img src="//placehold.it/150x150" class="img-circle pull- right">
          </p>
          <div class="clearfix"></div>
          <hr>
            Название
        </div>
      </div>
    </div>
  </div><!--/row-->
  <hr>
</div>


